<root>
    <Properties>
        <Level>
            <Type> UINT16 </Type>
            <Flags> BASE_AND_CLIENT </Flags>
            <Default> 1 </Default>
            <Persistent> true </Persistent>
        </Level>

        <Exp>
            <Type> UINT64 </Type>
            <Flags> BASE_AND_CLIENT </Flags>
            <Default> 0 </Default>
            <Persistent> true </Persistent>
        </Exp>

        <Fame>
            <Type> UINT64 </Type>
            <Flags> BASE_AND_CLIENT </Flags>
            <Default> 0 </Default>
            <Persistent> true </Persistent>
        </Fame>

        <Coin>
            <Type> UINT64 </Type>
            <Flags> BASE_AND_CLIENT </Flags>
            <Default> 10000 </Default>
            <Persistent> true </Persistent>
        </Coin>

        <RoleList>
            <Type> ROLE_LIST </Type>
            <Flags> BASE </Flags>
            <Persistent> true </Persistent>
        </RoleList>

        <CurrentRoomID>
            <Type> UINT64 </Type>
            <Flags> BASE </Flags>
            <Default> 0 </Default>
        </CurrentRoomID>
    </Properties>

    <ClientMethods>
        <!-- 请求账户信息回调 -->
        <OnReqAccountInfo>
            <Arg> UINT16 </Arg> 
            <Arg> UINT64 </Arg>
            <Arg> UINT64 </Arg>
            <Arg> UINT64 </Arg>
        </OnReqAccountInfo>

        <!-- 请求干员信息列表回调 -->
        <OnReqRoleList>
            <Arg> ROLE_LIST </Arg>
        </OnReqRoleList>

        <!--请求解锁干员回调 -->
        <OnReqUnlockRole>
            <Arg>  UINT8  </Arg> <!--结果-->
            <Arg>  UINT8  </Arg> <!--成功解锁的干员 编号 -->
        </OnReqUnlockRole>

        <!-- 请求干员信息回调 -->
        <OnReqRoleInfo>
            <Arg> ROLE_INFO </Arg>
        </OnReqRoleInfo>

        <!-- 客户端请求房间列表回调, 返回房间列表 ROOM_LIST -->
        <OnReqRoomList>
            <Arg> ROOM_LIST </Arg>
        </OnReqRoomList>

        <!-- 客户端请求创建房间回调, 返回创建房间结果和房间信息ROOM_INFO -->
        <OnReqCreateRoom>
            <Arg> UINT8 </Arg>
            <Arg> ROOM_INFO </Arg>
        </OnReqCreateRoom>
    </ClientMethods>

    <BaseMethods>
        <!-- 请求账户信息：等级，经验，声望值，金币 -->
        <ReqAccountInfo>
        <Exposed/>
        </ReqAccountInfo>

        <!-- 客户端请求干员信息列表 -->
        <ReqRoleList>
        <Exposed/>
        </ReqRoleList>

        <!-- 客户端请求解锁干员 -->
        <ReqUnlockRole>
            <Exposed/>
            <Arg>    UINT8    </Arg> <!-- 角色类型RoleType -->
        </ReqUnlockRole>

        <!-- 客户端请求干员信息 -->
        <ReqRoleInfo>
            <Exposed/>
             <Arg>    UINT8    </Arg> <!-- 角色类型RoleType -->
        </ReqRoleInfo>

        <!-- 客户端请求房间列表 -->
        <ReqRoomList>
            <Exposed/>
        </ReqRoomList>

        <!-- 客户端请求创建房间, 传入房间名字 -->
        <ReqCreateRoom>
            <Exposed/>
            <Arg> UNICODE </Arg>
        </ReqCreateRoom>

        <!-- 客户端请求进入房间, 传入房间id -->
        <ReqEnterRoom>
            <Exposed/>
            <Arg> UINT64 </Arg>
        </ReqEnterRoom>
    </BaseMethods>

    <CellMethods>

    </CellMethods>
</root>
