<root>
    <Properties>
        <Name> <!--昵称，暂时用账户名当昵称-->
            <Type> UNICODE </Type>
            <Flags> BASE_AND_CLIENT </Flags>
            <Default> Kgho </Default>
            <Persistent> true </Persistent>
        </Name>

        <Level>
            <Type> UINT16 </Type>
            <Flags> BASE_AND_CLIENT </Flags>
            <Default> 1 </Default>
            <Persistent> true </Persistent>
        </Level>

        <Exp>
            <Type> UINT64 </Type>
            <Flags> BASE_AND_CLIENT </Flags>
            <Default> 0 </Default>
            <Persistent> true </Persistent>
        </Exp>

        <Fame>
            <Type> UINT64 </Type>
            <Flags> BASE_AND_CLIENT </Flags>
            <Default> 0 </Default>
            <Persistent> true </Persistent>
        </Fame>

        <Coin>
            <Type> UINT64 </Type>
            <Flags> BASE_AND_CLIENT </Flags>
            <Default> 10000 </Default>
            <Persistent> true </Persistent>
        </Coin>

        <RoleList>
            <Type> ROLE_LIST </Type>
            <Flags> BASE </Flags>
            <Persistent> true </Persistent>
        </RoleList>

        <CurrentRoomID>
            <Type> UINT64 </Type>
            <Flags> BASE </Flags>
            <Default> 0 </Default>
        </CurrentRoomID>

        <!-- 玩家没选就自动选上次选的干员 -->
        <CurrentRoleID>
            <Type> DBID </Type>
            <Flags> BASE_AND_CLIENT </Flags>
            <Default> 0 </Default>
            <Persistent> true </Persistent>
        </CurrentRoleID>
    </Properties>

    <ClientMethods>
        <!-- 请求账户信息回调 -->
        <OnReqAccountInfo>
            <Arg> UNICODE </Arg> 
            <Arg> UINT16 </Arg> 
            <Arg> UINT64 </Arg>
            <Arg> UINT64 </Arg>
            <Arg> UINT64 </Arg>
        </OnReqAccountInfo>

        <!-- 请求干员信息列表回调 -->
        <OnReqRoleList>
            <Arg> ROLE_LIST </Arg>
        </OnReqRoleList>

        <!--请求解锁干员回调 -->
        <OnReqUnlockRole>
            <Arg>  UINT8  </Arg> <!--结果-->
            <Arg>  UINT8  </Arg> <!--成功解锁的干员 编号 -->
        </OnReqUnlockRole>

        <!-- 请求干员信息回调 -->
        <OnReqRoleInfo>
            <Arg> ROLE_INFO </Arg>
        </OnReqRoleInfo>

        <!-- 客户端请求房间列表回调, 返回房间列表 ROOM_LIST -->
        <OnReqRoomList>
            <Arg> ROOM_LIST </Arg>
        </OnReqRoomList>

        <!-- 客户端请求创建房间回调, 返回创建房间结果 0:成功，1:之前退出后信息还没处理完，进入失败。和房间信息ROOM_INFO -->
        <OnReqCreateRoom>
            <Arg> UINT8 </Arg>
            <Arg> ROOM_INFO </Arg>
        </OnReqCreateRoom>

        <!-- 客户端请求进入房间回调：0：成功，1：上次退出房间数据未清理无法进入，2：满员 ， 该房间玩家信息列表,蓝队，红队 -->
        <OnReqEnterRoom>
            <Arg> UINT8 </Arg>
            <Arg> PLAYER_LIST </Arg>
            <Arg> PLAYER_LIST </Arg>
        </OnReqEnterRoom>

        <!-- 客户端请求离开房间回调 -->
        <OnReqLeaveRoom>
            <Arg> UINT8 </Arg>
        </OnReqLeaveRoom>

        <!-- 客户端请求修改准备状态回调， 将服务器保存的状态返回给客户端 -->
        <OnReqChangeState>
            <Arg> UINT8 </Arg>
        </OnReqChangeState>

        <!-- 选择干员请求回调 -->
        <OnReqSelectRole>
            <Arg>  UINT8  </Arg> <!--结果-->
            <Arg>  UINT8  </Arg> <!--选择的干员 编号 -->
        </OnReqSelectRole>
    
        <!-- 通知房主客户端全员准备，0：全部准备，1：否  -->
        <OnAllReady>
            <Arg> UINT8 </Arg>
        </OnAllReady>
    </ClientMethods>

    <BaseMethods>
        <!-- 请求账户信息：等级，经验，声望值，金币 -->
        <ReqAccountInfo>
        <Exposed/>
        </ReqAccountInfo>

        <!-- 客户端请求干员信息列表 -->
        <ReqRoleList>
        <Exposed/>
        </ReqRoleList>

        <!-- 客户端请求解锁干员 -->
        <ReqUnlockRole>
            <Exposed/>
            <Arg>    UINT8    </Arg> <!-- 角色类型RoleType -->
        </ReqUnlockRole>

        <!-- 客户端请求干员信息 -->
        <ReqRoleInfo>
            <Exposed/>
             <Arg>    UINT8    </Arg> <!-- 角色类型RoleType -->
        </ReqRoleInfo>

        <!-- 客户端请求房间列表 -->
        <ReqRoomList>
            <Exposed/>
        </ReqRoomList>

        <!-- 客户端请求创建房间, 传入房间名字 -->
        <ReqCreateRoom>
            <Exposed/>
            <Arg> UNICODE </Arg>
        </ReqCreateRoom>

        <!-- 客户端请求进入房间, 传入房间id -->
        <ReqEnterRoom>
            <Exposed/>
            <Arg> UINT64 </Arg>
        </ReqEnterRoom>

        <!-- 客户端请求离开房间, 传入房间id -->
        <ReqLeaveRoom>
            <Exposed/>
        </ReqLeaveRoom>

        <!-- 客户端请求修改准备状态， 0：取消准备， 1：准备。服务端收到请求修改该客户端状态，然后把房间所有玩家信息返还给客户端 -->
        <ReqChangeState>
            <Exposed/>
            <Arg> UINT8 </Arg>
        </ReqChangeState>

        <!-- 选择干员请求 -->
        <ReqSelectRole>
            <Exposed/>
            <Arg> UINT8 </Arg> <!-- 角色类型RoleType -->
        </ReqSelectRole>

        <!-- 房主请求开始游戏 -->
        <ReqStartGame>
            <Exposed/>
            <Arg> UINT8 </Arg>
        </ReqStartGame>
    </BaseMethods>

    <CellMethods>

    </CellMethods>
</root>
